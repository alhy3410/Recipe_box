<h1> Here are all the recipes for <%= @category.name() %> </h1>
<hr>

<% if @category.recipes.any?() %>
  <% @category.recipes.uniq.each() do |recipe| %>
    <ul>
      <li><a href='/recipe/<%=recipe.id()%>'><%=recipe.name()%>[<a href="/delete_recipe/<%= recipe.id() %>">x</a>]</a></li>
    </ul>
  <% end %>
<% else %>
  <h4>There are no recipes in this category</h4>
<% end %>

<form action='/category/<%= @category.id() %>' method='post'>
  <label for='recipe_to_add'>Select a recipe from the list to add</label>
  <select id='recipe_to_add' name='recipe_to_add' type='text'>
    <% @recipes.each do |recipe| %>
      <option value= <%= recipe.id() %>><%= recipe.name() %></option>
    <% end %>
  </select>
  <button type='submit'>Add Recipe to Category</button>
</form>




